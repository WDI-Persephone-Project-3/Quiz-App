<h1>All Quizzes</h1>

<!-- if an instructor is logged in -->
<!-- show a list of all quizzes -->

<% if current_user.class == Instructor %>
  <p><a href="/quizzes/new" class="new-quiz">Create a new quiz!</a></p>
<% end %>

<ul>
 <% @quizzes.each do |quiz| %>
  <li>
    <h3><a href="/quizzes/<%= quiz[:id] %>"><%= quiz[:test_day] %></a></h3>
  </li>
 <% end %>
</ul>