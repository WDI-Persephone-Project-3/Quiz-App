<% if current_user.class == Instructor %>

<%= form_for @quiz, html: {method: "get"} do %>
  <%= label_tag(:test_day, "Date:") %>
  <%= date_field_tag(:test_day) %>
  <br>
  <!-- at some point, want to have a dropdown menu that lists all the existing questions -->
  <%= label_tag(:question, "Question:") %>
  <%= select_tag(:question, options_for_select(Quiz::QUESTIONS)) %> <!-- HELP -->
  <br>
  <%= label_tag(:answer, "Answer") %>
  <%= text_field_tag(:answer) %>
  <br>
  <%= submit_tag("Create") %>
<% end %>

<% end %>