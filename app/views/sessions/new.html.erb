<div class="form-container">
	<%= form_tag '/login' do %>
	  <!-- Second input is the value, so we set to nil -->
	  <%= text_field_tag :email, nil, placeholder: "Email", class: "login-field"%>
	  <%= password_field_tag :password, nil, placeholder: "Password", class: "login-field" %>
	  <%= submit_tag value="Log-In", class: "submit-btn" %>
	<% end %>
</div>