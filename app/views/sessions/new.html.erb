<div class="splash-image">
 
 <div class="greeting">
    <% if current_user %>
      <p class="hello">Hello <%= current_user.first_name%></p>
    <% else %>
      <p class="welcome">WELCOME</p>
    <% end %>
  </div>

	<%= form_tag '/login' do %>
	  <!-- Second input is the value, so we set to nil -->
	  <%= text_field_tag :email, nil, placeholder: "Email", class: "welcome-login-field"%>
	  <%= password_field_tag :password, nil, placeholder: "Password", class: "welcome-login-field" %>
	  <%= submit_tag value="Log-In", class: "welcome-submit-btn" %>
	<% end %>

</div>

<%= stylesheet_link_tag    'sessions' %>