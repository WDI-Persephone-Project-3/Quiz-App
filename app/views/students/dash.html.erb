<div class="btn-container-wrapper">
  <div class="instructor-links-container">
    <% if @todaysQuiz %>
      <a href="/quiz">Today's Quiz</a>
    <% else %>
      <a>No Quiz Today</a>
    <% end %>
    <a href="/students/<%= @student.id %>">View Your Profile</a>
    <a href="/cohorts/<%= @student.cohort_id %>">Your Cohort</a>
  </div>
</div> 

<div class="dash">
  <h3>Cohort: <%= @cohort.name %></h3>
  <div class="flex">  
    <div class="scroll-downs">
      <h4>Quizzes</h4>
      <ul class="scroll-down">
        <% @quizzes.each do |quiz| %>
          <a href="/quizzes/<%=quiz.id%>"><%= quiz.test_day%></a>
        <% end %>
      </ul>
      <h4>Select Quiz for Dash</h4>
      <select class="quiz-dropdown">
        <% @quizzes.each do |quiz| %>
          <option data-quiz-id="<%=quiz.id%>"><%= quiz.test_day %></option>
        <% end %>
      </select>     
    </div> <!-- scroll-downs -->
    <div class="data">
      <% if @quizzes.first %>
        <h4 class="quiz-name">Grades for Quiz <%= @quizzes.first.test_day%> </h4>
      <% else %>
        <h4 class="quiz-name">Create a quiz to see data</h4>
      <% end %>
      <div id="line-chart"></div>     
    </div> <!-- data -->
  </div> <!-- flex -->
</div> <!-- dash -->

<script type="text/javascript" src="https://www.google.com/jsapi?autoload= 
{'modules':[{'name':'visualization','version':'1.1','packages':
['corechart']}]}"></script>
<script src="../../student_dash.js"></script>
<link rel="stylesheet" href="../../student_dash.css">